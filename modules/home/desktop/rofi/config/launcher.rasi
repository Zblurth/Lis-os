/* ===========================================================================
   Rofi Theme - Compact & Most Used
   =========================================================================== */

@import "colors.rasi"

/* --- Configuration --- */
configuration {
    show-icons:                 true;
    drun-display-format:        "{name}";

    /* SORTING: Enable history so used apps float to top */
    disable-history:            false;
    sort:                       true;
    sorting-method:             "fzf";
    matching:                   "fuzzy";

    /* Bindings */
    kb-mode-next:               "Control+Tab";
    kb-mode-prev:               "Control+Shift+Tab";
}

/* --- Global Properties --- */
* {
    background-color:            transparent;
    text-color:                  @foreground;
    margin:                      0px;
    padding:                     0px;
    spacing:                     0px;
}

/* --- Window --- */
window {
    /* Compact Sizing (Matches wall-select height) */
    width:                       1000px;
    height:                      650px;

    location:                    center;
    anchor:                      center;

    background-color:            @background;
    border-radius:               16px;

    /* Safe Border */
    border:                      2px;
    border-color:                @selected;

    cursor:                      "default";
}

mainbox {
    orientation:                 horizontal;
    children:                    [ "left-area", "right-area" ];
    background-color:            transparent;
}

/* ===========================================================================
   LEFT AREA (Wallpaper + Button Bar)
   =========================================================================== */
left-area {
    /* Smaller sidebar width */
    width:                       380px;
    expand:                      false;

    /* Wallpaper */
    background-image:            url("~/.cache/rofi-launcher.jpg", height);

    /* Layout: Push mode-switcher to bottom */
    orientation:                 vertical;
    children:                    [ "dummy", "mode-switcher" ];
    padding:                     20px;
}

dummy {
    expand:                      true;
    background-color:            transparent;
}

/* The Button Bar */
mode-switcher {
    orientation:                 horizontal;
    enabled:                     true;
    spacing:                     8px;           /* Reduced from 20px */
    background-color:            @background;
    text-color:                  @foreground;
    opacity:                     0.9;
    padding:                     4px;           /* Reduced from 10px */
    border-radius:               8px;           /* Reduced from 12px */
}

button {
    padding:                     6px 12px;      /* Smaller padding */
    border-radius:               6px;           /* Reduced from 8px */
    background-color:            transparent;
    text-color:                  @foreground-muted;
    cursor:                      pointer;
    font:                        "Sans 9";      /* Smaller font */
}

button selected {
    background-color:            @selected;
    text-color:                  @text-selected;
}

/* ===========================================================================
   RIGHT AREA (App Grid)
   =========================================================================== */
right-area {
    expand:                      true;
    orientation:                 vertical;
    children:                    [ "inputbar", "listview" ];
    padding:                     30px;
    spacing:                     20px;
    background-color:            @background;
}

inputbar {
    padding:                     12px;
    border-radius:               12px;
    background-color:            @background-alt;
    text-color:                  @foreground;
    children:                    [ "entry" ];
}

entry {
    placeholder:                 "Search apps...";
    placeholder-color:           @foreground-muted;
    text-color:                  @foreground;
    cursor:                      text;
    vertical-align:              0.5;
}

listview {
    /* COMPACT GRID */
    columns:                     4;
    lines:                       3;

    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    spacing:                     15px;
}

/* ===========================================================================
   GRID ELEMENTS
   =========================================================================== */
element {
    /* Vertical: Icon Top, Text Bottom */
    orientation:                 vertical;
    padding:                     15px;
    border-radius:               16px;
    cursor:                      pointer;
    spacing:                     8px;
}

element selected {
    background-color:            @selected;
    text-color:                  @text-selected;
}

element-icon {
    /* Slightly smaller icons for compact look */
    size:                        58px;
    horizontal-align:            0.5;
    background-color:            transparent;
    cursor:                      inherit;
}

element-icon {
    size:                        48px;  /* MAKE THIS LARGER IF ICONS ARE HIDDEN */
    horizontal-align:            0.5;
    background-color:            transparent;
}

element-text {
    markup:                      true;
    horizontal-align:            0.5;
    vertical-align:              0.5;
    background-color:            transparent;
    text-color:                  inherit;
    font:                        "Sans 10";
}
